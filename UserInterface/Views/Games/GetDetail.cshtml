@model Entities.Models.Game.ViewModels.GameDetailViewModel

<div class="single-product section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        @foreach (var gameMedia in Model.GameMedias)
                        {

                            <div class="carousel-item @(Model.GameMedias[0] == gameMedia ? "active" : null)">
                                <img class="d-block w-100"
                                     src="@($"{Configuration.CoreConfiguration.APIOptions.WebAPI.BaseUrl}/Main/{Enum.GetName(typeof(Entities.Enum.Type.MediaTypeEnum), Entities.Enum.Type.MediaTypeEnum.GameImage)}/{Model.Id}/{gameMedia.MediaPath}")" alt="First slide">
                            </div>

                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <h4>@Model.Name</h4>
                <ul class="mb-3">
                    <li><span>Oyun Id:</span> @Model.Id</li>
                    <li><span>Kategori:</span> <a href="#">@Model.Category.Name</a></li>
                    <li><span>Yayınlanma Tarihi:</span> @Model.ReleaseDate</li>
                    <li><span>Açıklama</span> @Model.Description</li>
                </ul>
                <span class="price">@Model.Price</span>
                <form id="qty" action="#">
                    <button type="submit"><i class="fa fa-shopping-bag"></i> Sepete Ekle</button>
                </form>

            </div>
            <div class="col-lg-12">
                <div class="sep"></div>
            </div>
        </div>
    </div>
</div>
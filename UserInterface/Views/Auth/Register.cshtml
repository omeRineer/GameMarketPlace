@{
    Layout = "../Shared/_AuthLayout.cshtml";
}

<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                <div class="card border border-light-subtle rounded-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-5">
                                    <div class="text-center mb-4">
                                        <a href="#!">
                                            <img src="~/Temp/assets/images/logo.png" alt="BootstrapBrain Logo" width="175" height="57">
                                        </a>
                                    </div>
                                    <h4 class="text-center">Game Store Oyun Merkezine Hoşgeldin</h4>
                                </div>
                            </div>
                        </div>
                        <form asp-action="Register" method="post">
                            <div class="row gy-3 overflow-hidden">
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" name="firstName" id="firstName" placeholder="İsim" required>
                                        <label for="firstName" class="form-label">İsim</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Soyisim" required>
                                        <label for="lastName" class="form-label">Soyisim</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control" name="email" id="email" placeholder="Email" required>
                                        <label for="email" class="form-label">Email</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="tel" class="form-control" name="phone" id="phone" placeholder="Telefon" required>
                                        <label for="phone" class="form-label">Telefon</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" name="userName" id="userName" placeholder="Kullanıcı Adı" required>
                                        <label for="userName" class="form-label">Kullanıcı Adı</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control" name="password" id="password" value="" placeholder="Parola" required>
                                        <label for="password" class="form-label">Parola</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="date" class="form-control" name="birthdayDate" id="birthdayDate" value="" placeholder="Doğum Tarihi" required>
                                        <label for="birthdayDate" class="form-label">Doğum Tarihi</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn bsb-btn-xl btn-primary" type="submit">Kayıt Ol</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="row">
                            <div class="col-12">
                                <hr class="mt-5 mb-4 border-secondary-subtle">
                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                                    <a href="/Auth/Login" class="link-secondary text-decoration-none">Giriş Yap</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

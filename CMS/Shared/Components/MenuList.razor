
@inject MenuODataService MenuODataService

<RadzenSidebar @bind-Expanded="@sidebar1Expanded">
    <RadzenPanelMenu>
        <RadzenPanelMenuItem Text="Dashboard" Icon="home" />
        <RadzenPanelMenuItem Text="Slider" Path="slidercontents" Icon="view_carousel" />
        <RadzenPanelMenuItem Text="Kategoriler" Path="categories" Icon="category" />
        <RadzenPanelMenuItem Text="Oyunlar" Path="games" Icon="games" />
        <RadzenPanelMenuItem Text="Kullanıcılar" Icon="people" />
        <RadzenPanelMenuItem Text="Roller" Icon="admin_panel_settings" />
    </RadzenPanelMenu>
</RadzenSidebar>

@code {
    bool sidebar1Expanded = true;
    IEnumerable<Menu> menuList;

    protected async override Task OnInitializedAsync()
    {
        var result = await MenuODataService.GetListAsync(new ODataRequestParams());

        menuList = result.Value.AsODataEnumerable();
    }
}
